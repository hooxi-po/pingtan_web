<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="nightSky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#191970;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4169E1;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="blueTears" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#00BFFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0000FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="hotelGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#F0F8FF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E6E6FA;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Night Sky -->
  <rect width="400" height="200" fill="url(#nightSky)"/>
  
  <!-- Sea with Blue Tears -->
  <rect y="200" width="400" height="100" fill="url(#blueTears)"/>
  
  <!-- Blue Tears Effect -->
  <circle cx="50" cy="220" r="3" fill="#00FFFF" opacity="0.8"/>
  <circle cx="120" cy="240" r="2" fill="#00FFFF" opacity="0.9"/>
  <circle cx="180" cy="230" r="4" fill="#00FFFF" opacity="0.7"/>
  <circle cx="250" cy="250" r="2" fill="#00FFFF" opacity="0.8"/>
  <circle cx="320" cy="235" r="3" fill="#00FFFF" opacity="0.9"/>
  <circle cx="370" cy="245" r="2" fill="#00FFFF" opacity="0.7"/>
  
  <!-- Modern Hotel Building -->
  <rect x="80" y="100" width="240" height="140" fill="url(#hotelGradient)" stroke="#4169E1" stroke-width="2"/>
  
  <!-- Hotel Floors -->
  <line x1="80" y1="130" x2="320" y2="130" stroke="#4169E1" stroke-width="1"/>
  <line x1="80" y1="160" x2="320" y2="160" stroke="#4169E1" stroke-width="1"/>
  <line x1="80" y1="190" x2="320" y2="190" stroke="#4169E1" stroke-width="1"/>
  <line x1="80" y1="220" x2="320" y2="220" stroke="#4169E1" stroke-width="1"/>
  
  <!-- Windows Pattern -->
  <rect x="100" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="130" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="160" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="190" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="220" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="250" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="280" y="110" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  
  <rect x="100" y="140" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="130" y="140" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="160" y="140" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="190" y="140" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="220" y="140" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="250" y="140" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="280" y="140" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  
  <rect x="100" y="170" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="130" y="170" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="160" y="170" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="190" y="170" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="220" y="170" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  <rect x="250" y="170" width="15" height="15" fill="#FFD700" opacity="0.6"/>
  <rect x="280" y="170" width="15" height="15" fill="#FFD700" opacity="0.8"/>
  
  <!-- Hotel Entrance -->
  <rect x="180" y="200" width="40" height="40" fill="#4169E1"/>
  <rect x="185" y="205" width="30" height="30" fill="#F0F8FF"/>
  
  <!-- Hotel Sign -->
  <rect x="150" y="80" width="100" height="20" fill="#4169E1"/>
  <text x="200" y="95" text-anchor="middle" fill="white" font-family="Arial" font-size="12">BLUE TEARS RESORT</text>
  
  <!-- Stars -->
  <circle cx="50" cy="30" r="2" fill="white"/>
  <circle cx="150" cy="20" r="1.5" fill="white"/>
  <circle cx="300" cy="40" r="2" fill="white"/>
  <circle cx="350" cy="25" r="1" fill="white"/>
  
  <!-- Moon -->
  <circle cx="350" cy="60" r="20" fill="#F0F8FF" opacity="0.9"/>
  
  <!-- Reflection in Water -->
  <rect x="80" y="240" width="240" height="40" fill="url(#hotelGradient)" opacity="0.3"/>
</svg>