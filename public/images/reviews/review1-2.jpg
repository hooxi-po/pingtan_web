<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="oceanGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#E0F6FF;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#4682B4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#191970;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Ocean Background -->
  <rect width="400" height="300" fill="url(#oceanGradient)"/>
  
  <!-- Sailboat -->
  <polygon points="200,150 220,100 240,150" fill="white"/>
  <rect x="218" y="150" width="4" height="40" fill="#8B4513"/>
  <ellipse cx="220" cy="190" rx="25" ry="8" fill="#654321"/>
  
  <!-- Seagulls -->
  <path d="M80,80 Q90,70 100,80" stroke="white" stroke-width="2" fill="none"/>
  <path d="M90,90 Q100,80 110,90" stroke="white" stroke-width="2" fill="none"/>
  
  <path d="M320,60 Q330,50 340,60" stroke="white" stroke-width="1.5" fill="none"/>
  <path d="M330,70 Q340,60 350,70" stroke="white" stroke-width="1.5" fill="none"/>
  
  <!-- Waves around boat -->
  <path d="M180,200 Q200,190 220,200 Q240,210 260,200" stroke="white" stroke-width="2" fill="none" opacity="0.7"/>
  <path d="M170,210 Q190,200 210,210 Q230,220 250,210" stroke="white" stroke-width="1.5" fill="none" opacity="0.5"/>
  
  <!-- Sun reflection -->
  <ellipse cx="300" cy="120" rx="15" ry="40" fill="#FFD700" opacity="0.4"/>
  
  <!-- Text -->
  <text x="200" y="280" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">游客拍摄 - 海上风帆</text>
</svg>